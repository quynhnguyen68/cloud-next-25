---
import nextLogo from '../assets/next-logo.png';
import bridgeLogo from '../assets/bridge.png';
import googleCloudLogo from '../assets/cloud.png';
---

<div id="container">
	<div class="blur-cloud cloud-1"></div>
	<div class="blur-cloud cloud-2"></div>
	<div class="blur-cloud cloud-3"></div>
	<main>
		<img id="cloud-logo" src={googleCloudLogo.src} alt="Google Cloud logo" />
		<p id="google-text">Google Cloud</p>
		<img id="bridge-logo" src={bridgeLogo.src} alt="Bridge logo" />
		<img id="next-logo" src={nextLogo.src} alt="Next logo" />

		<p>Saturday, July 26, 2025 – 13:00 PM to 17:30 PM (GMT+7)</p>
		<p>Maximilan Hotel, 222 Võ Nguyên Giáp, Sơn Trà, Đà Nẵng</p>

		<button>Register now</button>
	</main>
</div>

<style>
	#container {
		height: 100%;
		background: var(--bg-gradient);
		color: var(--text-color);
		transition: all var(--transition-speed) ease;
		position: relative;
		overflow: hidden;
	}

	.blur-cloud {
		position: absolute;
		border-radius: 50%;
		filter: blur(60px);
		opacity: 0.4;
		z-index: 0;
		pointer-events: none;
	}

	.cloud-1 {
		width: 350px;
		height: 350px;
		background-color: rgba(59, 130, 246, 0.15); /* Google blue */
		top: 15%;
		left: 10%;
		animation: floatCloud 18s ease-in-out infinite;
	}

	.cloud-2 {
		width: 400px;
		height: 400px;
		background-color: rgba(234, 67, 53, 0.08); /* Google red */
		bottom: 10%;
		right: 15%;
		animation: floatCloud 22s ease-in-out infinite alternate;
	}

	.cloud-3 {
		width: 300px;
		height: 300px;
		background-color: rgba(52, 168, 83, 0.1); /* Google green */
		top: 60%;
		left: 20%;
		animation: floatCloud 25s ease-in-out infinite 5s;
	}

	@keyframes floatCloud {
		0%, 100% { transform: translateY(0) translateX(0); }
		25% { transform: translateY(-40px) translateX(20px); }
		50% { transform: translateY(-15px) translateX(-20px); }
		75% { transform: translateY(-30px) translateX(10px); }
	}

	/* Add subtle animated background pattern */
	#container::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			radial-gradient(circle at 20% 50%, rgba(59, 130, 246, 0.05) 0%, transparent 50%),
			radial-gradient(circle at 80% 20%, rgba(234, 67, 53, 0.05) 0%, transparent 50%),
			radial-gradient(circle at 40% 80%, rgba(52, 168, 83, 0.05) 0%, transparent 50%);
		pointer-events: none;
		z-index: 0;
	}

	main {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
        z-index: 1;
    }
	/* Google and Cloud text styling */
	#google-text {
		position: absolute;
		top: calc(50% - 300px);
		left: calc(50% - 200px);
		font-size: 40px;
		font-weight: 700;
		z-index: 3;
		color: #fff;
		text-shadow: var(--glow-effect);
		transition: all var(--transition-speed) ease;
		letter-spacing: -0.02em;
	}

	#google-text:hover {
		transform: scale(1.05);
		text-shadow: var(--glow-effect), 0 0 40px rgba(66, 133, 244, 0.3);
	}

	@keyframes float {
		0% { transform: translateY(0) rotate(0deg); }
		33% { transform: translateY(-12px) rotate(1deg); }
		66% { transform: translateY(-6px) rotate(-1deg); }
		100% { transform: translateY(0) rotate(0deg); }
	}

	@keyframes pulse {
		0%, 100% { opacity: 1; }
		50% { opacity: 0.8; }
	}

	#next-logo {
		width: 50%;
		max-width: 650px;
		transition: all var(--transition-speed) ease;
		filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.1));
	}

	#next-logo:hover {
		filter: drop-shadow(0 12px 24px rgba(0, 0, 0, 0.15));
	}

	/* Enhanced dark theme image adjustments */
	.dark #next-logo {
		filter: brightness(0.95) contrast(1.1) drop-shadow(0 8px 16px rgba(0, 0, 0, 0.3));
	}

	.dark #next-logo:hover {
		filter: brightness(1) contrast(1.1) drop-shadow(0 12px 24px rgba(0, 0, 0, 0.4));
	}

	.dark #cloud-logo {
		filter: brightness(1.1) drop-shadow(0 4px 8px rgba(0, 0, 0, 0.2));
	}

	.dark #bridge-logo {
		filter: brightness(1.05) drop-shadow(0 4px 8px rgba(0, 0, 0, 0.2));
	}

	#bridge-logo {
		width: 10%;
		min-height: 100px;
		height: auto;
		position: absolute;
		top: calc(50% - 270px);
		right: calc(50% - 320px);
		z-index: 2;
		animation: float 4s ease-in-out infinite;
		transition: all var(--transition-speed) ease;
		filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
	}

	#bridge-logo:hover {
		animation-play-state: paused;
		transform: scale(1.1);
	}

	#cloud-logo {
		width: 5%;
		height: auto;
		position: absolute;
		top: calc(50% - 300px);
		left: calc(50% - 360px);
		z-index: 2;
		transition: all var(--transition-speed) ease;
		filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
		animation: pulse 3s ease-in-out infinite;
	}

	#cloud-logo:hover {
		transform: scale(1.15);
		animation-play-state: paused;
	}

	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
	}

	#container {
		height: 100%;
	}

	main {
		height: 100%;
		display: flex;
		justify-content: center;
		position: relative;
		z-index: 1;
	}

	h2 {
		margin: 0 0 1em;
		font-weight: 600;
		color: var(--text-color);
		font-size: 22px;
		letter-spacing: -0.01em;
	}

	p {
		color: var(--text-secondary);
		font-size: 16px;
		line-height: 1.6;
		letter-spacing: -0.006em;
		margin: 0;
	}

	@media screen and (max-width: 768px) {
		#container {
			display: flex;
			flex-direction: column;
		}

		#hero {
			display: block;
			padding-top: 10%;
		}

		/* #next-logo {
			max-height: 50%;
			max-width: 90%;
		}

		#bridge-logo {
			width: 35%;
			top: calc(50% - (0.5 * 90% / 2) - 5%);
			right: calc(50% - (0.9 * 90% / 2) - 2%);
		}

		#google-text {
			top: calc(50% - (0.5 * 50% / 2) - 15%);
			left: calc(50% - (0.9 * 90% / 2) + 5%);
			font-size: 12px;
		}

		#cloud-text {
			top: calc(50% - (0.5 * 50% / 2) - 10%);
			left: calc(50% - (0.9 * 90% / 2) + 5%);
			font-size: 12px;
		} */

		#links {
			flex-wrap: wrap;
		}

		#links a.button {
			padding: 14px 18px;
		}

		#news {
			right: 16px;
			left: 16px;
			bottom: 2.5rem;
			max-width: 100%;
		}

		h1 {
			line-height: 1.5;
		}
	}

	@media (prefers-reduced-motion: reduce) {
		#bridge-logo,
		#cloud-logo,
		#container::before {
			animation: none;
		}
		
		* {
			transition: none !important;
		}
	}

	/* Enhanced media query for system dark mode preference */
	@media (prefers-color-scheme: dark) {
		:root:not([data-theme="light"]) {
			--bg-color: #0f172a;
			--bg-gradient: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
			--text-color: #f1f5f9;
			--text-secondary: #94a3b8;
			--text-accent: #60a5fa;
			--card-bg: #1e293b;
			--card-border: #334155;
			--button-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
			--button-hover: #e2e8f0;
			--google-text-color: #60a5fa;
			--cloud-text-color: #4ade80;
			--glow-effect: 0 0 30px rgba(96, 165, 250, 0.2);
		}
	}
</style>
