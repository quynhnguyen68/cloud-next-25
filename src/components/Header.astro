<script>
    function init() {
        const button = document.querySelector('.btn-menu');
        const icon = document.querySelector('#nav-icon');
        const menuPopup = document.querySelector('#navbar-default');

        if (button && icon && menuPopup) {
            button.addEventListener('click', () => {
                icon.classList.toggle('open');

                if (menuPopup.classList.contains('hidden')) {
                    menuPopup.classList.remove('hidden');
                    menuPopup.classList.add('absolute');

                    return;
                }

                menuPopup.classList.add('hidden');
                menuPopup.classList.remove('absolute');
            });
        }
    }

    document.addEventListener("astro:after-swap", init);
    init();
</script>

